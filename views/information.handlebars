<!-- Holds the Name and E. Contact -->

<div class="list-group">
  <input
    class="form-control form-control-lg d-none"
    id="medication-user-id"
    value="{{user_id}}"
  />
  <div
    class="list-group-item list-group-item-action flex-column bg-secondary align-items-start active"
  >
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">Name: <span>{{user_name}}</span></h5>
    </div>
    <p class="mb-1">Phone Number:
      <span>{{information.personal_number}}</span></p>

    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">Emergency Contact:
        <span>{{information.emergency_contact}}</span></h5>
    </div>
    <p class="mb-1">Phone Number:
      <span>{{information.emergency_number}}</span></p>
  </div>
</div>

<section class="row justify-content-around mt-2">
  <div class="card text-white bg-info shadow-lg mb-3" style="max-width: 30rem;">
    <h4 class="card-header">Your Current Information</h4>
    <div class="card-body">
      <div>
        <p class="">Blood Type</p>
        <ul>
          <li>{{information.blood_type}}</li>
        </ul>
      </div>

      <div>
        <p class="">Allergies</p>
        <ul>
          <li>{{information.allergies}}</li>
        </ul>
      </div>

      <div>
        <p class="">Transplants and Dates</p>
        <ul>
          <li>{{information.transplants}}</li>
        </ul>
      </div>

      <div>
        <p class="">Devices</p>
        <ul>
          <li>{{information.devices}}</li>
        </ul>
      </div>

      <div>
        <p class="">Other Notes</p>
        <ul>
          <li>{{information.notes}}</li>
        </ul>
      </div>

    </div>
  </div>

    {{#unless information.personal_number}}
      <div class="card text-white bg-info shadow-lg mb-3" style="max-width: 30rem;">
        <h4 class="card-header">Add Your Information</h4>
        <div class="card-body">
          <label class="col-form-label" for="personal-number">Your Phone Number</label>
          <input class="form-control" id="personal-number" />

          <label class="col-form-label" for="emergency-name">Emergency Contact</label>
          <input class="form-control" id="emergency-name" />

          <label class="col-form-label" for="emergency-number">Emergency Contact
            Phone Number</label>
          <input class="form-control" id="emergency-number" />

          <label class="col-form-label" for="blood-type">Blood Type</label>
          <input class="form-control" id="blood-type" />

          <label class="col-form-label" for="allergies">Allergies</label>
          <input class="form-control" id="allergies" />

          <label class="col-form-label" for="transplants">Add Any Transplants and
            Dates</label>
          <input class="form-control" id="transplants" />

          <label class="col-form-label" for="devices">Add Any Implants/Devices</label>
          <input class="form-control" id="devices" />

          <div class="form-group">
            <label class="form-label mt-2" for="notes">Add Other Notes</label>
            <textarea class="form-control" id="notes" rows="3"></textarea>
          </div>

          <button
            type="submit"
            class="btn btn-primary bg-light text-dark mt-3"
            id="submit-new"
          >Submit</button>

    {{/unless}}

    {{#if information.personal_number}}
      <div class="card text-white bg-info shadow-lg mb-3" style="max-width: 30rem;">
        <h4 class="card-header">Edit Your Information</h4>
        <div class="card-body">
          <label class="col-form-label" for="personal-number">Your Phone Number</label>
          <input class="form-control" id="personal-number" />

          <label class="col-form-label" for="emergency-name">Emergency Contact</label>
          <input class="form-control" id="emergency-name" />

          <label class="col-form-label" for="emergency-number">Emergency Contact
            Phone Number</label>
          <input class="form-control" id="emergency-number" />

          <label class="col-form-label" for="blood-type">Blood Type</label>
          <input class="form-control" id="blood-type" />

          <label class="col-form-label" for="allergies">Allergies</label>
          <input class="form-control" id="allergies" />

          <label class="col-form-label" for="transplants">Add Any Transplants and
            Dates</label>
          <input class="form-control" id="transplants" />

          <label class="col-form-label" for="devices">Add Any Implants/Devices</label>
          <input class="form-control" id="devices" />

          <div class="form-group">
            <label class="form-label mt-2" for="notes">Add Other Notes</label>
            <textarea class="form-control" id="notes" rows="3"></textarea>
          </div>

          <button
            type="submit"
            class="btn btn-primary bg-light text-dark mt-3"
            id="update"
          >Update</button>
    {{/if}}

    </div>
  </div>

</section>

<script src="/js/addInformation.js"></script>
<script src="/js/updateInformation.js"></script>