<div class="container">
  <div class="card text-white bg-info mb-3 m-5" style="max-width: 20rem;">
    <form class="class-header" id="signup-form">
      <h4 class="card-title m-2">Sign Up</h4>
      <div class="card-body">
        <div class="m-4">
          <label for="username">Full Name:</label>
          <input class="form-input" type="text" id="username" />
        </div>
      <div class="form-group m-4">
        <label for="email-signup">E-mail:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group m-4">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      
      <div class="form-group">
        <button class="btn btn-secondary m-4" type="submit">Signup</button>
      </div>
    </form>

<script src="/js/signup.js"></script>

